<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/colorSwatch"
    android:visibility="gone"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/mediumSpace"
    android:columnCount="4"
    android:rowCount="2"
    android:background="@color/gray"
    android:orientation="vertical">

    <View
        android:onClick="onColorSelected"
        android:layout_margin="@dimen/smallSpace"
        android:id="@+id/colorPickBlack"
        android:background="@android:color/black"
        android:layout_width="@dimen/colorSwatchButtonWidth"
        android:layout_height="@dimen/colorSwatchButtonWidth"
        />
    <View
        android:onClick="onColorSelected"
        android:layout_margin="@dimen/smallSpace"
        android:id="@+id/colorPickRed"
        android:background="@color/red"
        android:layout_width="@dimen/colorSwatchButtonWidth"
        android:layout_height="@dimen/colorSwatchButtonWidth"
        />
    <View
        android:onClick="onColorSelected"
        android:layout_margin="@dimen/smallSpace"
        android:id="@+id/colorPickDarkGray"
        android:background="@color/darkGray"
        android:layout_width="@dimen/colorSwatchButtonWidth"
        android:layout_height="@dimen/colorSwatchButtonWidth"
        />
    <View
        android:onClick="onColorSelected"
        android:layout_margin="@dimen/smallSpace"
        android:id="@+id/colorPickOrange"
        android:background="@color/orange"
        android:layout_width="@dimen/colorSwatchButtonWidth"
        android:layout_height="@dimen/colorSwatchButtonWidth"
        />
    <View
        android:onClick="onColorSelected"
        android:layout_margin="@dimen/smallSpace"
        android:id="@+id/colorPicklightGray"
        android:background="@color/lightGray"
        android:layout_width="@dimen/colorSwatchButtonWidth"
        android:layout_height="@dimen/colorSwatchButtonWidth"
        />
    <View
        android:onClick="onColorSelected"
        android:layout_margin="@dimen/smallSpace"
        android:id="@+id/colorPickYellow"
        android:background="@color/yellow"
        android:layout_width="@dimen/colorSwatchButtonWidth"
        android:layout_height="@dimen/colorSwatchButtonWidth"
        />
    <View
        android:onClick="onColorSelected"
        android:layout_margin="@dimen/smallSpace"
        android:id="@+id/colorPickBlue"
        android:background="@color/blue"
        android:layout_width="@dimen/colorSwatchButtonWidth"
        android:layout_height="@dimen/colorSwatchButtonWidth"
        />
    <View
        android:onClick="onColorSelected"
        android:layout_margin="@dimen/smallSpace"
        android:id="@+id/colorPickGreen"
        android:background="@color/green"
        android:layout_width="@dimen/colorSwatchButtonWidth"
        android:layout_height="@dimen/colorSwatchButtonWidth"
        />

</GridLayout>